	      <form id = "entries" class = "center-block">
	        <input class = "input-field col s12 white"></form>
	        <button type = "submit" class = "btn submit">SUBMIT</button>
	      </form>
    </div>
    </div>
    </div>
    <%-include partials/scripts.ejs %>
